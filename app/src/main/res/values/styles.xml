<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">

          Theme customizations available in newer API levels can go in
          res/values-vXX/styles.xml, while customizations related to
          backward-compatibility can go here.

    </style> -->

    <style name="KerawaTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@color/textPrimary</item>
        <item name="actionBarStyle">@style/myTheme.ActionBar</item>
    </style>

    <style name="KerawaTheme2" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="theme">@style/KerawaTheme</item>
    </style>

    <style name="KerawaPopup" parent="AlertDialog.AppCompat.Light">

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textPrimary</item>
    </style>
    <style name="myTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/blue_kerawa</item>
        <item name="backgroundStacked">@color/blue_kerawa</item>
        <item name="backgroundSplit">@color/blue_kerawa</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_up_compat</item>
        <item name="titleTextStyle">@style/Toolbar.TitleText</item>
    </style>
    <style name="Toolbar.TitleText" parent="">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Kerawa.NiceText" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/blue_kerawa</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="Kerawa.NiceText2" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/blue_kerawa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blue_kerawa</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>
    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="my_popop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#eee</item>
    </style>

    <style name="warnin_window">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Toolbar.TitleText</item>
        <item name="android:textColor">#222222</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_blue</item>
        <item name="android:drawableLeft">@drawable/errore</item>
        <item name="android:layout_above">@+id/refresher</item>
    </style>

    <style name="black_blue_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/blue_kerawa</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHighlight">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_above">@+id/linearLayout9</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- Blue Buttons -->
    <style name="ThemeOverlay.MyBlueButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_kerawa</item>
    </style>

    <style name="Kerawa.QRTextTitle" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Kerawa.QRTextDetail" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_black_100</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
