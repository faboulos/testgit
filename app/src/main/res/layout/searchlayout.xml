<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="0dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/searchlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtSearch"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:hint="Mot de recherche ici"
                android:textSize="22sp"
                android:textColorHint="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/labels"
            android:layout_below="@+id/searchlayout"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cate"
                android:layout_weight="1"
                android:text="Catégorie"
                android:textColor="#42a5f5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/spinners"
            android:layout_below="@+id/labels"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:id="@+id/cate"-->
                <!--android:layout_weight="1"-->
                <!--android:text="Catégorie"-->
                <!--android:textColor="#42a5f5"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="20sp"-->
                <!--android:gravity="left"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
            <Spinner
                android:id="@+id/catspinner"
                android:layout_weight="1"
                android:text="Category"
                android:backgroundTint="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/subcat"
            android:layout_below="@+id/spinners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_weight="1"
                android:text="Sous-Catégories"
                android:textColor="#42a5f5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subcategories"
            android:layout_below="@+id/subcat"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:layout_weight="1"-->
                <!--android:text="Sous-Catégories"-->
                <!--android:textColor="#42a5f5"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="20sp"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:gravity="left"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
            <Spinner
                android:id="@+id/subcatspinner"
                android:layout_weight="1"
                android:text="Category"
                android:backgroundTint="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/citylayout"
            android:layout_below="@+id/subcategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:text="Ville"
                android:textColor="#42a5f5"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/citysp"
            android:layout_below="@+id/citylayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<TextView-->
                <!--android:layout_weight="1"-->
                <!--android:text="Ville"-->
                <!--android:textColor="#42a5f5"-->
                <!--android:textSize="20sp"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:gravity="left"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
            <Spinner
                android:id="@+id/cityspinner"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/citysp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Recherche"
                android:textColor="#ffffff"
                android:background="@drawable/submit_selector"
                android:id="@+id/searchSubmit"
                android:layout_below="@+id/linearLayout3" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>