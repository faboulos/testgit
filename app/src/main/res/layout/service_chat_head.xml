<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/in_message_bg"
        android:padding="12dp"
        android:text="Medium Text"
        android:textColor="#d0ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxWidth="200dp"
        android:minWidth="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/icon_img"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_title"
        android:layout_toEndOf="@+id/txt_title"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="31dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/shape2"
        android:orientation="vertical"
        android:id="@+id/list_loader"
        android:layout_below="@+id/icon_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/icon_img"
        android:layout_alignEnd="@+id/icon_img"
        android:touchscreenBlocksFocus="false"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0ffffff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="12dp"
            android:text="TextView"
            android:layout_alignParentTop="false"
            android:background="@color/blue_kerawa"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/btn_dismiss"
            android:layout_toStartOf="@+id/btn_dismiss"
            android:textAppearance="@style/Toolbar.TitleText" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/photo"
            android:src="@drawable/logo2"
            android:layout_below="@+id/txt_text" />

        <ImageView
            android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="#d0ffffff"
            android:src="@drawable/close_window"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_above="@+id/listView2"
            android:layout_centerVertical="true"
            android:background="@color/blue_kerawa" />

    </RelativeLayout>

</RelativeLayout>