
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.kerawa.app.LoginActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#fff">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/Toolbar.TitleText"
        android:text="Bien vouloir vous connecter pour creer une annonce"
        android:id="@+id/attention"
        android:minHeight="40dp"
        android:textColor="#77000000"
        android:padding="10dp"
        android:drawableLeft="@drawable/errore"
        android:layout_above="@id/status_text"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/Toolbar.TitleText"
        android:text="Attention a ce que vous saisissez"
        android:id="@+id/status_text"
        android:minHeight="40dp"
        android:background="@drawable/shape2"
        android:textColor="#000"
        android:padding="10dp"
        android:drawableLeft="@drawable/errore"
        android:visibility="invisible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/Toolbar.TitleText"
        android:text=""
        android:id="@+id/textView13"
        android:minHeight="40dp"
        android:background="@drawable/shape2"
        android:textColor="#77000000"
        android:padding="10dp"
        android:drawableLeft="@drawable/errore"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayout6"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/votre_numero"
            android:hint="@string/votre_email"
            android:enabled="true"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="#eee"
            android:nestedScrollingEnabled="true"
            android:linksClickable="false"
            android:clickable="true"
            tools:ignore="TextFields"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:layout_weight="0.52"
            android:textAppearance="@style/Toolbar.TitleText"
            android:textColor="#444" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/password"
            android:layout_margin="5dp"
            android:hint="@string/password"
            android:padding="5dp"
            android:background="#eee"
            android:visibility="visible"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textAppearance="@style/Toolbar.TitleText"
            android:textColor="#444" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/linearLayout2"
        android:weightSum="100"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/new_and_register"
            android:id="@+id/register_text"
            android:padding="2dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="65"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_click"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textSize="15sp"
            android:capitalize="sentences"
            android:textAppearance="@style/Toolbar.TitleText" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/hello_login"
            android:id="@+id/login_button"
            android:layout_weight="35"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|center|fill_vertical"
            android:background="@drawable/button_click"
            android:textStyle="normal"
            android:typeface="normal"
            android:textSize="15sp"
            android:capitalize="sentences"
            android:textAppearance="@style/Toolbar.TitleText"
            android:textColor="#FFFFFF" />
    </LinearLayout>

